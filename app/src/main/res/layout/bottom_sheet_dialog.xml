<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:id="@+id/idRLSheet"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="About"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_qr"
        android:layout_width="175dp"
        android:layout_height="175dp"
        app:srcCompat="@drawable/qrcode"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- - -"
        android:layout_marginTop="-5dp"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Github: "
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/iv_qr"/>

    <TextView
        android:id="@+id/github_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_qr"
        android:layout_toRightOf="@id/textView2"
        android:text="@string/github_link"
        android:textColor="#0277BD"
        android:textSize="15sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/orange_800"
        android:text="Important note: -"
        android:layout_below="@id/github_link"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="30dp"
        android:text="@string/user_instruction"
        android:textColor="@color/black"
        android:textSize="14sp" />


</RelativeLayout>